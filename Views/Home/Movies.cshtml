@{
    ViewData["Title"] = "Movie Database";
}

@*Brings in the model*@
@model HiltonMovies.Models.MovieDatabase

<div class="text-center">
    @*Creates the form for a user to enter a new movie into the database*@
    <h1 class="display-4">Hilton's Movie Database</h1>
    <form method="post">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" /><br />

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        @*dropdown menu for ratings*@
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited?: </label>
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /><br />

        @*submits the info entered into the form into the model, calling the post method*@
        <button type="submit">Add New Movie</button>
    </form>
</div>